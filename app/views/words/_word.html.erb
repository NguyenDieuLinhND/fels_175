<table class="table table-hover">
  <thead class="thead_table_word">
    <tr>
      <th><%= t "views.users.stt" %></th>
      <th><%= t "views.users.word" %></th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= @index = @index +1 %></td>
        <td><%= word.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
