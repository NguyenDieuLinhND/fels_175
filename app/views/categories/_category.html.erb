<div class="col-md-4 blog-main box text-center">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title" id="title_name"><%= link_to category.name,
        category_path(category) %></h3>
      <p><%= category.description %></p>
    </div>
    <div class="panel-body">
      <div class="date_time"><%= localize_time category.created_at %></div>
      <br>
      <div class="btn-group" role="group" aria-label="...">
        <%= form_for Lesson.new do |f| %>
          <%= f.hidden_field :category_id, value: category.id %>
          <%= f.submit t("views.categories.index.start_lesson"),
            class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
