<div class="col-md-4 blog-main box text-center">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><%= category.name %></h3>
      <p><%= category.description %></p>
    </div>
    <div class="panel-body">
      <div class="date_time"><%= localize_time category.created_at %></div>
      <br>
      <div class="btn-group">
        <%= link_to t("views.categories.edit"),
          "#", class: "btn btn-success" %>
        <%= link_to t("views.categories.delete"), "#",
          method: :delete, data: {confirm: t("messages.notice")},
          class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
