<% if @category.invalid? %>
  $('.category-errors').html('<%= j render "shared/error_messages",
    object: @category %>');
  $('.category-errors').delay(500).slideUp();
<% else %>
  $('#myupdatecategory_<%= @category.id %>').modal('hide');
  $('#category_<%= @category.id %>').fadeOut(500, function(){
    $(this).remove();
  $('#category-index').prepend($('<%= j render @category %>').fadeIn('slow'));
  });
<% end %>
